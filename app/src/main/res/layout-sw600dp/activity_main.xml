<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="5"
    tools:context=".view.MainActivity">


    <fragment
        android:id="@+id/list_fragment"
        android:name="ru.yandex.android.andrew.yandexmobilisation.view.ListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@android:layout/list_content" />


    <FrameLayout
        android:id="@+id/artist_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <fragment
            android:id="@+id/list_detail"
            android:name="ru.yandex.android.andrew.yandexmobilisation.view.DetailFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="ru.yandex.android.andrew.yandexmobilisation.view.DetailActivity"
            tools:layout="@android:layout/list_content" />

    </FrameLayout>

</LinearLayout>
