<?xml version="1.0" encoding="utf-8"?>
<com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ru.yandex.android.andrew.yandexmobilisation.custom.CustomImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/image_big"

            android:background="@android:color/holo_red_light"

            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="fggfdgdfg"
            android:textColor="@color/text_item_artist"
            android:textSize="@dimen/text_size_item_artist_small"
            android:id="@+id/detail_genre"
            android:layout_below="@+id/image_big"
            android:layout_alignLeft="@+id/label_biography"
            android:layout_alignStart="@+id/label_biography" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="sdggsgf"
            android:textSize="@dimen/text_size_item_artist_small"
            android:textColor="@color/text_item_artist"
            android:id="@+id/detail_tracks_albums"
            android:layout_below="@+id/detail_genre"
            android:layout_alignLeft="@+id/detail_genre"
            android:layout_alignStart="@+id/detail_genre" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/biography"
            android:textSize="@dimen/text_size_item_artist_big"
            android:textColor="@color/black_text"
            android:id="@+id/label_biography"
            android:layout_below="@+id/detail_tracks_albums"
            android:layout_alignLeft="@+id/scrollView"
            android:layout_alignStart="@+id/scrollView" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:verticalScrollbarPosition="left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/label_biography"
            android:layout_marginLeft="@dimen/default_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="New Text"
                android:textSize="@dimen/text_size_item_artist_little"
                android:textColor="@color/black_text"
                android:id="@+id/description" />
        </ScrollView>
    </RelativeLayout>

</com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout>
